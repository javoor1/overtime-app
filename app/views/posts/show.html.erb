<div>
	<h2><%= @post.work_performed %> </h2>
</div>

<div class="well">
	<div>
		<h3><span>Daily Hours:</span> <%=@post.daily_hours%></h3>
	</div>

	<div>
		<h3><span>Date:</span> <%=@post.date%></h3>
	</div>

	<div>
		<h3><span>Current Status:</span> <%=@post.status%></h3>
	</div>
</div>

<%= link_to 'Edit', edit_post_path(@post), class: 'btn btn-primary' if policy(@post).update? %>